---
interface Props {
	title: string;
	body: string;
	href: string;
    price: number;
}

const { href, title, body, price } = Astro.props;
---

<div class="flex flex-col p-6 mx-auto max-w-lg text-center text-gray-900 bg-white rounded-lg border border-gray-100 shadow dark:border-gray-600 xl:p-8 dark:bg-gray-800 dark:text-white blur-2xl">
    <h3 class="mb-4 text-2xl font-semibold">{title}</h3>
    <p class="font-light text-gray-500 sm:text-lg dark:text-gray-400">{body}</p>
    <div class="flex justify-center items-baseline my-8">
        <span class="mr-2 text-5xl font-extrabold">{price}</span>
    </div>
</div>