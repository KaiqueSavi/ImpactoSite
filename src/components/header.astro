---
interface Props {
	logo: string;
}

const {logo} = Astro.props;
---

<header class='py-4 px-4 sm:px-10 bg-transparent min-h-[70px] z-50 absolute top-0 left-0 w-full'>
    <div class='flex flex-wrap items-center justify-around gap-5 relative z-99'>
      <a href="javascript:void(0)"><img src={logo} alt="logo" class='w-48' />
      </a>
      <div class='flex lg:order-1 max-sm:ml-auto hidden md:block'>
        <button
          class='px-12 py-2 text-sm rounded-full font-bold text-white bg-gradient-to-r from-blue to-purple transition-all ease-in-out duration-300 hover:bg-transparent hover:text-[#007bff]'>ASSINE JÁ</button>
        <button id="toggle" class='lg:hidden ml-7'>
          <svg class="w-7 h-7" fill="#000" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
            <path fill-rule="evenodd"
              d="M3 5a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zM3 10a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zM3 15a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1z"
              clip-rule="evenodd"></path>
          </svg>
        </button>
      </div>
      <ul id="collapseMenu" class='lg:!flex lg:space-x-5 max-lg:space-y-2 max-lg:hidden max-lg:py-4 max-lg:w-full'>
        <li class='max-lg:border-b max-lg:bg-[#007bff] max-lg:py-2 px-3 max-lg:rounded'>
          <a href='javascript:void(0)'
            class='lg:hover:text-[#007bff] duration-300 text-[white] max-lg:text-white block font-semibold text-[15px]'>HOME</a>
        </li>
        <li class='max-lg:border-b max-lg:py-2 px-3 max-lg:rounded'><a href='javascript:void(0)'
            class='lg:hover:text-[#007bff] duration-300 text-white block font-semibold text-[15px]'>PLANOS RESIDENCIAIS</a>
        </li>
        <li class='max-lg:border-b max-lg:py-2 px-3 max-lg:rounded'><a href='javascript:void(0)'
            class='lg:hover:text-[#007bff] duration-300 text-white block font-semibold text-[15px]'>PLANOS EMPRESARIAIS</a>
        </li>
        <li class='max-lg:border-b max-lg:py-2 px-3 max-lg:rounded'><a href='javascript:void(0)'
            class='lg:hover:text-[#007bff] duration-300 text-white block font-semibold text-[15px]'>FALE CONOSCO</a>
        </li>
        <li class='max-lg:border-b max-lg:py-2 px-3 max-lg:rounded'><a href='javascript:void(0)'
            class='lg:hover:text-[#007bff] duration-300 text-white block font-semibold text-[15px]'>SOBRE NÓS</a>
        </li>
      </ul>
    </div>
  </header>